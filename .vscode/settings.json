{
    // Uwaga: Wcięcia (tabSize, insertSpaces), końcówki linii i kodowanie są pobierane z .editorconfig,
    // o ile nie zostaną jawnie nadpisane poniżej. Zalecamy nie ustawiać ich tutaj, by zachować spójność w całym zespole.
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[php]": {
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "php.validate.executablePath": "C:\\Users\\jacek\\.config\\herd\\bin\\php83\\php.exe",
    "tailwindCSS.includeLanguages": {
        "php": "html",
        "blade": "html"
    },
    "tailwindCSS.emmetCompletions": true,
    "color-highlight.enable": true,
    "files.associations": {
        "*.blade.php": "blade"
    },
    "emmet.includeLanguages": {
        "blade": "html"
    },
    "livewire.autoComplete": true,
    "chat.editor.fontSize": 22,
    // Ustawienia wyszukiwania - wykluczanie niepotrzebnych katalogów
    "search.exclude": {
        "**/node_modules": true,
        "**/vendor": true,
        "**/storage": true,
        "public/build": true
    },
    // Ustawienia plików - ukrywanie plików i katalogów w eksploratorze
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/vendor": true
    },
    // Ustawienia dla lintera Tailwind CSS
    "tailwindCSS.lint.invalidClass": "error",
    "tailwindCSS.lint.invalidApply": "error",
    "tailwindCSS.lint.conflictingClass": "warning"
}
